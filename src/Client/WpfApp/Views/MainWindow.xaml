<Window x:Class="WpfApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Views" 
        xmlns:viewmodels="clr-namespace:WpfApp.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="FormWindow" Height="400" Width="700">

    <Grid>
        <TextBox HorizontalAlignment="Left" Name="tbName" Text="{Binding NameValue}" Margin="544,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="21"/>
        <TextBox HorizontalAlignment="Left" Name="tbEmail"  Text="{Binding MessageContentValue}" Margin="20,314,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="330" Height="50"/>

        <TextBlock TextWrapping="Wrap" Margin="500,20,160,344"><Run Language="pl-pl" Text="Name"/></TextBlock>
        
        <Button Content="Button" Command="{Binding SendMessageCommand}" HorizontalAlignment="Right" Margin="0,314,220,0" Width="120" VerticalAlignment="Top" Height="50"/>
        <Button Content="Button" Command="{Binding JoinChatCommand}" HorizontalAlignment="Right" Margin="0,59,120,0" Width="80" VerticalAlignment="Top" Height="20"/>
        <Button Content="Button" Command="{Binding LeaveChatCommand}" HorizontalAlignment="Right" Margin="0,59,35,0" Width="80" VerticalAlignment="Top" Height="20"/>
    </Grid>
</Window>
